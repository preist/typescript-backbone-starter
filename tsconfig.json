{
    "compilerOptions": {
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths" : {
            "*": ["node_modules/*"]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}
